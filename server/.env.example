# SMTP settings for sending verification codes. If empty, emails will be logged.
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# JWT secret for signing tokens (set to a secure random value in production)
JWT_SECRET=replace-me-with-a-strong-secret
JWT_ALGORITHM=HS256
JWT_EXPIRES_SECONDS=3600

# Development mode: use fixture data instead of live API calls
USE_FIXTURES=true

# ArkLogic: optional settings for arkprts or game auth
ARKPRTS_API_KEY=
ARKPRTS_API_URL=
